<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <!--  ListRow Left sied Thumbnail image -->


        <!-- Title Of Song-->
        <TextView
            android:id="@+id/itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold"/>

        <!-- Artist Name -->
        <TextView
            android:id="@+id/category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemname"
            android:textColor="#343434"
            android:textSize="10dip"
            android:layout_marginTop="1dip"
            android:text="Category" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/stockqty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:textSize="10dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"
            android:text="Stock"/>

        <TextView
            android:id="@+id/uom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stockqty"
            android:textSize="10dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"
            android:text="UOM"/>

        <TextView
            android:id="@+id/shelfloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uom"
            android:textSize="10dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"
            android:text="Shelf Location"/>
        <TextView
            android:id="@+id/curstock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shelfloc"
            android:textSize="10dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"
            android:text="Current Stock"/>

        <!-- Rightend Arrow -->
        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/curstock"
            android:textSize="10dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"
            android:text="Reason"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>