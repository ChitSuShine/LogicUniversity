<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="13"
    tools:context="com.example.team10ad.LogicUniversity.Report1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginHorizontal="@dimen/default_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/category"
            android:textSize="@dimen/textsize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_gap"
            android:textStyle="bold|italic">

        </TextView>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/catSpin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginHorizontal="@dimen/default_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dept1"
            android:textSize="@dimen/textsize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_gap"
            android:textStyle="bold|italic">

        </TextView>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dept1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginHorizontal="@dimen/default_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dept2"
            android:textSize="@dimen/textsize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_gap"
            android:textStyle="bold|italic">

        </TextView>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dept2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_marginHorizontal="@dimen/default_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dept3"
            android:textSize="@dimen/textsize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_gap"
            android:textStyle="bold|italic">

        </TextView>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dept3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Generate"
        android:background="@drawable/my_button_approve"
        android:textColor="@color/background"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_weight="8">

    </com.github.mikephil.charting.charts.BarChart>

</LinearLayout>